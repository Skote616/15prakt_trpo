<Page x:Class="DBFirst.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:valid="clr-namespace:DBFirst.Validators"
      xmlns:local="clr-namespace:DBFirst.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="6">
            <StackPanel Grid.Row="0" Grid.Column="0">
                <Label>Наименование</Label>
                <TextBox Name="ProductName" Validation.ErrorTemplate="{x:Null}" >
                    <TextBox.Text>
                        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <valid:EmptyValidation ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=ProductName,Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="8" Text="{Binding ErrorContent}"  Style="{StaticResource ValidationErrorText}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        
            <StackPanel Grid.Row="1" Grid.Column="0">
                <Label>Описание</Label>
                <TextBox Name="Descriprion" Validation.ErrorTemplate="{x:Null}" >
                    <TextBox.Text>
                        <Binding Path="Description" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <valid:EmptyValidation ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=Descriprion,Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="8" Text="{Binding ErrorContent}"  Style="{StaticResource ValidationErrorText}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
     
            <StackPanel Grid.Row="2" Grid.Column="0">
                <Label>Цена</Label>
                <TextBox Name="Price" Validation.ErrorTemplate="{x:Null}" >
                    <TextBox.Text>
                        <Binding Path="Price" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <valid:EmptyValidation ValidatesOnTargetUpdated="True"/>
                                <valid:DoubleValidation ValidatesOnTargetUpdated="True"/>
                               
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=Price,Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="8" Text="{Binding ErrorContent}"  Style="{StaticResource ValidationErrorText}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0">
                <Label>Рейтинг</Label>
                <StackPanel Orientation="Horizontal">
                   <Slider Minimum="0.1" Maximum="5" TickFrequency="0.1" IsSnapToTickEnabled="True" SmallChange="0.1" LargeChange="1" Value="{Binding Rating}" Width="374"/>
                    <Label FontSize="10" Content="{Binding Rating, StringFormat={}{0:F1}}"></Label>
                </StackPanel>
            </StackPanel>
       
            <StackPanel Grid.Row="5" Grid.Column="0">
                <Label>Количество</Label>
                <TextBox Name="Stock" Validation.ErrorTemplate="{x:Null}" >
                    <TextBox.Text>
                        <Binding Path="Stock" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <valid:EmptyValidation ValidatesOnTargetUpdated="True"/>
                                <valid:NumberValidation ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl ItemsSource="{Binding ElementName=Stock,Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="8" Text="{Binding ErrorContent}"  Style="{StaticResource ValidationErrorText}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0">
                <Label>Категория</Label>
                <ComboBox x:Name="CategoryCombo"></ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0">
                <Label>Бренд</Label>
                <ComboBox x:Name="BrandCombo"></ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.RowSpan="2" Grid.Column="0">
                <Label>Теги</Label>
                <ListBox
                     SelectionMode="Multiple"
                     x:Name="TagsListBox" Height="45" SelectionChanged="TagsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

        </StackPanel>

        <Button Grid.Column="1" Grid.RowSpan="2" Grid.Row="0" Width="200" Click="save">Сохранить</Button>
        <Button Grid.Column="1" Grid.RowSpan="2" Grid.Row="2" Width="200" Click="remove">Удалить</Button>
        <Button Grid.Column="1" Grid.RowSpan="2" Grid.Row="4" Width="200" Click="back">Назад</Button>
    </Grid>
</Page>
